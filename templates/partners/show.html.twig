{% extends 'base.html.twig' %}

{% block title %}Fiche partenaire {% endblock %}

{% block body %}
    <h1>Fiche Partenaire : {{ partner.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Est actif</th>
                <td>{{ partner.isActive ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ partner.slug }}</td>
            </tr>
            <tr>
                <th>Modules</th>
                <td>
                    {% if partner.Modules %}
                    {% for module in partner.Modules %}
                    {{module}}
                    {% endfor %}
                    {% endif %}
                </td>
            </tr>    
        </tbody>
    </table>

    <a href="{{ path('app_partners_index') }}"><i class="fa-solid fa-person-walking-arrow-loop-left"></i>Revenir Ã  la liste</a>

    <a href="{{ path('app_partners_edit', {'id': partner.id}) }}"><i class="fa-solid fa-pen purple"></i>Modifier</a>

    {{ include('partners/_delete_form.html.twig') }}
{% endblock %}
