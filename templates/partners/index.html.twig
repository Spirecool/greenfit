{% extends 'base.html.twig' %}

{% block title %}Partners index{% endblock %}

{% block body %}
    <h1>Partners index</h1>

    <table class="table">
        <thead>
            <tr>
           
                <th>Nom</th>
                <th>Prénom</th>
                <th>Ville</th>
                <th>Rôle</th>
                <th>Is_active</th>
                <th>Modules</th>
                <th>Slug</th>
                <th>actions</th>

            </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>
           
                <td>{{ partner.users.firstname }}</td>
                <td>{{ partner.users.lastname }}</td>
                <td>{{ partner.users.city }}</td>
                <td>{{ partner.users.RolesUsers.name }}</td>
                <td>{{ partner.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    {% if partner.Modules %}
                    {% for module in partner.Modules %}
                    {{module}}
                    {% endfor %}
                    {% endif %}
                
                </td>
                <td>{{ partner.slug }}</td>
                <td>
                    <a href="{{ path('app_partners_show', {'id': partner.id}) }}">show</a>
                    <a href="{{ path('app_partners_edit', {'id': partner.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_partners_new') }}">Create new</a>
{% endblock %}
