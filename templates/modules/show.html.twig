{% extends 'base.html.twig' %}

{% block title %}Modules{% endblock %}

{% block body %}
    <h1>Modules</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ module.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ module.description }}</td>
            </tr>
            <tr>
                <th>Est activé par défaut</th>
                <td>{{ module.isDefault ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_modules_index') }}">Revenir à la liste</a>

    <a href="{{ path('app_modules_edit', {'id': module.id}) }}">Éditer</a>

    {{ include('modules/_delete_form.html.twig') }}
{% endblock %}
