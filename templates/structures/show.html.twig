{% extends 'base.html.twig' %}

{% block title %}Structure{% endblock %}

{% block body %}
    <h1>Structure</h1>

    <table class="table">
        <tbody>
           
            <tr>
                <th>Est activée</th>
                <td>{{ structure.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ structure.slug }}</td>
            </tr>
            <tr>
                <th>Nom du gérant</th>
                <td>{{ structure.users.lastname }}</td>
            </tr>
            <tr>
                <th>Prénom du gérant</th>
                <td>{{ structure.users.firstname }}</td>
            </tr>
             <tr>
                <th>Modules activés</th>
                <td>
                    {% if structure.Modules %}
                    {% for module in structure.Modules %}
                    {{module}}
                    {% endfor %}
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_structures_index') }}">Revenir à la liste</a>

    <a href="{{ path('app_structures_edit', {'id': structure.id}) }}">Modifier</a>

    {{ include('structures/_delete_form.html.twig') }}
{% endblock %}
